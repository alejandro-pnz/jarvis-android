<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/conditioner_btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_conditioner"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/conditioner_btn"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">

        <ImageButton
            android:id="@+id/light_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/ic_light"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/door_button"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/ic_door"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/kettle_btn"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/ic_kettle"
            android:scaleType="fitCenter" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">

        <ImageButton
            android:id="@+id/cam1_btn"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/ic_cam"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/cam2_btn"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/ic_cam"
            android:scaleType="fitCenter" />
    </LinearLayout>


    <com.skyfishjy.library.RippleBackground
        android:id="@+id/voice_ripple"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal|bottom"
        app:rb_color="@color/rippelColor"
        app:rb_duration="1000"
        app:rb_radius="16dp"
        app:rb_rippleAmount="2"
        app:rb_scale="2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/voice_control_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_microphone"
            android:padding="12dp"
            android:scaleType="fitCenter" />
    </com.skyfishjy.library.RippleBackground>
</RelativeLayout>
