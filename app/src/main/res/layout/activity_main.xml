<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/ic_door"
        android:id="@+id/button"
        android:layout_alignTop="@+id/kettle_btn"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/camera2_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/ic_cam"
        android:layout_above="@+id/kettle_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/kettle_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/ic_kettle"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/ic_light"
        android:layout_below="@+id/button4"
        android:layout_toRightOf="@+id/kettle_btn"
        android:layout_toLeftOf="@+id/camera2_btn"
        android:layout_toStartOf="@+id/camera2_btn" />

    <Button
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/ic_cam"
        android:layout_above="@+id/kettle_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/ic_conditioner"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/camera2_btn"
        android:layout_alignEnd="@+id/camera2_btn" />

    <Button
        android:id="@+id/voice_control_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/ic_microphone"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

</RelativeLayout>
